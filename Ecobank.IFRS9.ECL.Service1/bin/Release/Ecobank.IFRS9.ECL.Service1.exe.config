<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>


  <connectionStrings>
    <add name="IFRS9_DB" connectionString="Data Source=.\sqlexpress;Initial Catalog=IFRS9_DB;Integrated Security=True" />
  </connectionStrings>

  <appSettings>
    <add key="CalibrationModelPath" value="C:\PwC\Projects\SourceCode\Firs_9_ECL\Calibration_Affiliates" />
    <add key="MacroModelPath" value="C:\PwC\Projects\SourceCode\Firs_9_ECL\R_test" />
    <add key="RScriptPath" value="C:\Program Files\R\R-4.0.1\bin" />
  </appSettings>

  <!-- <log4net configSource="log4net.config" /> -->
  <log4net>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="LogFileAppender" />
    </root>
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="log/IFRS_ECL.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="100" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d [%t] %-5p %c %m%n" />
      </layout>
    </appender>
  </log4net>

  <runtime>

    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">

      <dependentAssembly>

        <assemblyIdentity name="FSharp.Core" publicKeyToken="b03f5f7f11d50a3a" culture="neutral" />

        <bindingRedirect oldVersion="0.0.0.0-4.4.0.0" newVersion="4.4.0.0" />

      </dependentAssembly>

    </assemblyBinding>

  </runtime>
</configuration>